{
  "compilerOptions": {
    "target": "es2021",                                                             
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                                
    "baseUrl": "./src",                                  
    "paths": {
      "@modules/*":["modules/*"],
      "@config/*":["config/*"],
      "@shared/*":["shared/*"],
      "@errors/*":["errors/*"],
      "@utils/*":["utils/*"]
    },                                                              
    "resolveJsonModule": true,                                           
    "sourceMap": true,                                                               
    "outDir": "./dist",                                 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,                                
    "skipLibCheck": true                               
  }
}
